<div class="container" style="margin: 100px 0;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la promoción</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id" />
                <div class="mb-3 row">
                    <label for="">Título</label>
                    <input type="text" value="{{novedad.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="mb-3 row">
                    <label for="">Subtítulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}" />
                </div>


                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" name="imagen_url" id="imagen_url" /></label>
                    </p>
                    <p>
                        <laabel><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                            actual</label>
                            <input type="hidden" name="img_original" value="{{novedad.imagen_url}}">
                    </p>
                </div>
                
                <div class="mb-3 row">
                    <label for="">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p class="alert alert-danger mt-3">{{message}}</p>
            {{/if}}

            {{!-- {{#if error}}
            <p>{{message}}</p>
            {{/if}} --}}
        </div>
    </div>
</div>