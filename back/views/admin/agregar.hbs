<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva Promoci√≥n</h4>
            <form action="/admin/novedades/agregar" method="post">

                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>

                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>

                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Url de la Imagen" name="imagen_url">
                </div>

                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p class="alert alert-danger mt-3">{{message}}</p>
            {{/if}}

            {{!-- {{#if error}}
            <p>{{message}}</p>
            {{/if}} --}}
        </div>
    </div>
</div>